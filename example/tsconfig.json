{
    "compilerOptions": {
      "experimentalDecorators": true,
      "baseUrl": ".",
      "paths": {},
      "outDir": "./dist"
    },
    "include": ["./index.ts", "./src/**/*", "./config/**/*"],
    "exclude": ["node_modules", "./src/**/tests/**", "./src/**/dist/**"],
    "emitDecoratorMetadata": true,
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "noEmit": true,
    "paths": {
      "*": ["./*.d.ts"]
    },
    "files": [
      "./global.d.ts"
    ],
    "ts-node": {
      "compilerOptions": {
        "module": "commonjs"
      }
    },
  }
  